.row-fluid
  .span4.offset4.box-shadow
    %h2.shadow1.sansation1 Please, input your personal information
    = simple_form_for @personal_info, :url =>  user_personal_infos_path(current_user), :html => {:multipart => true, :method => :post}  do |f|
      - if @personal_info.errors.any?
        #error_explanation
          %h2= "#{pluralize(@personal_info.errors.count, "error")} prohibited this personal_info from being saved:"
          %ul
            - @personal_info.errors.full_messages.each do |msg|
              %li= msg

 
      = f.text_field :name, :placeholder => "Name"
      = f.text_field :surname, :placeholder => "Surname"
      = f.number_field :age, :placeholder => "Age"
     
      .field 
        = f.label "Upload an image"
        = f.input :image
      = f.text_field :country, :placeholder => "Country"
      = f.text_field :about, :placeholder => "About you"
      .actions
        %button.btn.btn-primary{ :type => "submit" } Save

    = link_to 'Back', user_personal_infos_path(current_user)
